<div class="ui raised segment box">
    <table class="ui celled structured table">
        <thead><tr><div class="table-label">VIEW EVENT</div></tr>
        </thead>
        <tbody>
        {{#event}}
            <tr><td><strong>Name</strong> </td><td>{{name}}</td></tr>
            <tr><td><strong>Description</strong> </td><td>{{description}}</td></tr>
            <tr><td><strong>Duration</strong></td><td>{{duration}}</td></tr>
            <tr><td><strong>Date</strong></td><td>{{date}}</td></tr>

            <tr><td><strong>City</strong></td><td>{{city}}</td></tr>
            <tr><td><strong>Street name</strong></td><td>{{street}}</td></tr>
            <tr><td><strong>Street number</strong></td><td>{{street_number}}</td></tr>
            <tr><td><strong>Zip</strong></td> <td>{{zip}}</td></tr>
        {{/event}}
        </tbody>
    </table>
</div>